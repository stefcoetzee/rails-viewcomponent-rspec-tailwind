<div class="mb-2">
  <%= render PageHeaderComponent.new do %>
    <div class="mb-1">
      <%= render BackNavigationComponent.new(
        path: team_path(@team), text: "team"
      ) %>
    </div>
    <%= render PageTitleComponent.new(title: "Add a new player") %>
  <% end %>
</div>

<%= form_with model: [@team, @athlete], data: { turbo: false } do |f| %>
  <div class="mt-2">
    <div>
      <%= f.label :first_name %>
    </div>
    <div>
      <%= f.text_field :first_name %>
    </div>
  </div>

  <div class="mt-2">
    <div>
      <%= f.label :last_name %>
    </div>
    <div>
      <%= f.text_field :last_name %>
    </div>
  </div>

  <div class="mt-2">
    <div>
      <%= f.label :position %>
    </div>
    <div>
      <%= f.text_field :position %>
    </div>
  </div>

  <div class="mt-2">
    <div>
      <%= f.label :jersey_number %>
    </div>
    <div>
      <%= f.number_field :jersey_number %>
    </div>
  </div>

  <div class="w-32 py-2 mt-4 font-medium text-center text-white bg-gray-800 rounded-full cursor-pointer">
    <%= f.submit "Add player", class: "cursor-pointer" %>
  </div>
<% end %>
